{
   "editor.mouseWheelZoom": true,
   "editor.tabSize": 3,
   "editor.detectIndentation": false,
   "editor.formatOnSave": true,
   "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
   },
   "eslint.rules.customizations": [
      { "rule": "*", "fixable": true, "severity": "off" }
   ],
   "explorer.fileNesting.enabled": true,
   "explorer.fileNesting.patterns": {
      ".env": ".env.*, telerik-license.*",
      "package.json": "package-lock.json",
      "tsconfig.json": "tsconfig.*, env.d.ts",
      "vite.config.*": "index.html, eslint*"
   },
   "files.associations": { "*.css": "tailwindcss", "*.json": "jsonc" },
   "json.format.keepLines": true,
   "html.format.extraLiners": "",
   "html.format.indentInnerHtml": true,
   "tailwindCSS.lint.cssConflict": "ignore",
   "[jsonc]": { "editor.defaultFormatter": "vscode.json-language-features" },
   "[tailwindcss]": { "editor.defaultFormatter": "bradlc.vscode-tailwindcss" },
   "[vue]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },
}